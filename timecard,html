<body class="bg-gray-100">

<div class="container mx-auto mt-10">
    <div class="calendar-header">
        <h2>Employee Timecard</h2>
        <button onclick="generateCalendar()">Refresh Calendar</button>
    </div>

    <h3 class="text-xl font-bold mt-8 mb-4 text-center">Employee Leave Calendar</h3>

    <div class="text-center mb-5">
        <p class="text-gray-600">Click on a date to select and fill out your timecard details</p>
    </div>

    <div class="flex">
        <div class="w-3/4 bg-white shadow-md rounded-lg p-6">
            <div class="overflow-x-auto">
                <table class="calendar-table w-full">
                    <thead>
                        <tr>
                            <th>Sun</th>
                            <th>Mon</th>
                            <th>Tue</th>
                            <th>Wed</th>
                            <th>Thu</th>
                            <th>Fri</th>
                            <th>Sat</th>
                        </tr>
                    </thead>
                    <tbody id="calendarBody">
                        <!-- Calendar rows will be generated by JavaScript -->
                    </tbody>
                </table>
            </div>
        </div>

        <div class="w-1/4 bg-white shadow-md rounded-lg p-6 sidebar">
            <h3 class="text-xl font-bold mb-4">Timecard Details</h3>
            <div id="timecardOptions">
                <p class="text-gray-600">Select a date from the calendar to enter your timecard details.</p>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        generateCalendar();
    });

    let selectedDate = null;

    function generateCalendar() {
        const calendarBody = document.getElementById('calendarBody');
        calendarBody.innerHTML = ''; // Clear existing content
        const daysInMonth = new Date(2024, 6, 0).getDate(); // Assuming July 2024
        let date = 1;

        for (let i = 0; i < 6; i++) {
            const row = document.createElement('tr');
            for (let j = 0; j < 7; j++) {
                const cell = document.createElement('td');
                if (i === 0 && j < new Date(2024, 5, 1).getDay()) {
                    cell.innerHTML = "";
                } else if (date > daysInMonth) {
                    break;
                } else {
                    cell.innerHTML = date;
                    cell.setAttribute('id', `day-${date}`);
                    cell.classList.add('cursor-pointer', 'hover:bg-blue-200');
                    cell.addEventListener('click', function() {
                        selectDate(date);
                    });
                    date++;
                }
                row.appendChild(cell);
            }
            calendarBody.appendChild(row);
        }
    }

    function selectDate(date) {
        // Remove highlight from previously selected cell
        if (selectedDate) {
            const prevCell = document.getElementById(`day-${selectedDate}`);
            prevCell.classList.remove('selected-date');
        }

        selectedDate = date;
        const cell = document.getElementById(`day-${selectedDate}`);
        cell.classList.add('selected-date');

        const timecardOptions = document.getElementById('timecardOptions');
        timecardOptions.innerHTML = `
            <h4 class="text-lg font-semibold mb-3">Date: ${date} July 2024</h4>
            <label class="block mb-2">
                <span class="text-gray-700">Type of Leave</span>
                <select class="form-select mt-1 block w-full" id="leaveType">
                    <option value="">Select Leave Type</option>
                    <option value="full-day">Full Day</option>
                    <option value="half-day">Half Day</option>
                    <option value="absent">Absent</option>
                    <option value="other">Other</option>
                </select>
            </label>
            <label class="block mb-2">
                <span class="text-gray-700">Comments</span>
                <textarea class="form-textarea mt-1 block w-full" id="leaveComments" rows="3"></textarea>
            </label>
            <button class="bg-blue-500 text-white px-4 py-2 rounded-md mt-3" onclick="saveTimecard()">Save</button>
        `;
    }

    function saveTimecard() {
        const leaveType = document.getElementById('leaveType').value;
        const leaveComments = document.getElementById('leaveComments').value;
        const cell = document.getElementById(`day-${selectedDate}`);

        // Remove existing classes
        cell.classList.remove('timecard-full-day', 'timecard-half-day', 'timecard-absent', 'timecard-other');

        // Update cell based on selected leave type
        let leaveText = '';
        switch (leaveType) {
            case 'full-day':
                cell.classList.add('timecard-full-day');
                leaveText = 'Full Day';
                break;
            case 'half-day':
                cell.classList.add('timecard-half-day');
                leaveText = 'Half Day';
                break;
            case 'absent':
                cell.classList.add('timecard-absent');
                leaveText = 'Absent';
                break;
            case 'other':
                cell.classList.add('timecard-other');
                leaveText = 'Other';
                break;
            default:
                leaveText = '';
                break;
        }

        cell.innerHTML = `
            <div>${selectedDate}</div>
            <div class="text-xs font-semibold">${leaveText}</div>
            <div class="text-xs">${leaveComments}</div>
        `;

        // Update Timecard Details section
        document.getElementById('timecardOptions').innerHTML = `
            <h4 class="text-lg font-semibold mb-3">Date: ${selectedDate} July 2024</h4>
            <p class="text-gray-700">Leave Type: ${leaveText}</p>
            <p class="text-gray-700">Comments: ${leaveComments}</p>
        `;
    }
</script>

</body>
</html>
